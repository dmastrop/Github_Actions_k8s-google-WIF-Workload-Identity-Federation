sudo: required
language: generic

services:
  - docker

before_install:
  - docker build -t dave123456789/complex-multi -f ./client/Dockerfile.dev ./client

script:
  - docker run -e CI=true dave123456789/complex-multi npm test

after_success:
  - docker build -t dave123456789/multi-client ./client
  - docker build -t dave123456789/multi-nginx ./nginx
  - docker build -t dave123456789/multi-server ./server
  - docker build -t dave123456789/multi-worker ./worker
  # Log in to the docker CLI
  - echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_ID" --password-stdin
  # Take those images and push them to docker hub
  - docker push dave123456789/multi-client
  - docker push dave123456789/multi-nginx
  - docker push dave123456789/multi-server
  - docker push dave123456789/multi-worker
